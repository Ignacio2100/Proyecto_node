<%- include("templates/header") %>

<div class="container">
      <div class="shadow-lg p-3 mb-5 bg-white rounded">
          <div class="card-body">
          <form action="/abonarclientesaldo/<%=task_cliente._id%>" method="POST">
            <h1 class="text-primary ">Abonar Cliente</h1>
            <div class="form-row">
              <div class="form-group col-md-4">
                <label for="codigocliente">Codigo</label>
                <input type="text" class="form-control" id="codigocliente" name="codigocliente" placeholder="Codigo" readonly="readonly" value="<%=task_cliente.codigocliente%>">
              </div>
              <div class="form-group col-md-4">
                <label for="dpicliente">DPI</label>
                <input type="number" class="form-control" id="dpicliente" name="dpicliente" placeholder="DPI" value="<%=task_cliente.dpicliente%>" readonly="readonly" required>
              </div>
              <div class="form-group col-md-4">
                <label for="nitcliente">NIT</label>
                <input type="number" class="form-control" id="nitcliente" name="nitcliente" placeholder="NIT" value="<%=task_cliente.nitcliente%>" readonly="readonly">
              </div>
            </div>
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="nombrecliente">Nombre</label>
                <input type="text" class="form-control" id="nombrecliente" name="nombrecliente" placeholder="Nombre" value="<%=task_cliente.nombrecliente%>" required readonly="readonly">
              </div>
              <div class="form-group col-md-6">
                <label for="apellidocliente">Apellido</label>
                <input type="text" class="form-control" id="apellidocliente" name="apellidocliente" placeholder="Apellido" value="<%=task_cliente.apellidocliente%>" required readonly="readonly">
              </div>
            </div>


            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="saldocliente">Saldo</label>
                <input type="number" class="form-control" id="saldocliente" name="saldocliente" placeholder="Saldo" value="<%=task_cliente.saldocliente%>" required readonly="readonly">
              </div>

              <div class="form-group col-md-6">
                <label for="montoabono">Monto Abono</label>
                <input type="number" class="form-control" id="montoabono" name="montoabono" placeholder="Abono" step="0.01" required>
              </div>



            </div>

            <button type="submit" class="btn btn-primary">Abonar</button>
           </form>

        </div>


        <div class="form-group p-3">
          <table class="table table-hover">
          <thead class="thead-dark">
            <tr>
              <th scope="col">Codigo</th>
              <th scope="col">Monto Abono</th>
              <th scope="col">Saldo Actual</th>
              <th scope="col">Fecha</th>
              </tr>
          </thead>
          <tbody>
            <% for (var i =0; i<listaabonos.length; i++){%>
              <tr>
                <th scope="row"><%=listaabonos[i].codigocliente%></th>
                <td><%=listaabonos[i].montoabono%></td>
                <td><%=listaabonos[i].saldoactualcliente%></td>
                <td><%=listaabonos[i].fechaabonocliente%></td>

              </tr>

            <%}%>


          </tbody>
        </table>

        </div>



      </div>

  </div>




<%- include("templates/footer") %>
