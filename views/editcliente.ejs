<%- include("templates/header") %>

<div class="container">
      <div class="shadow-lg p-3 mb-5 bg-white rounded">
          <div class="card-body">
          <form action="/updatecliente/<%=task_cliente._id%>" method="POST">
            <h1 class="text-primary ">Editar Cliente</h1>
            <div class="form-row">
              <div class="form-group col-md-4">
                <label for="codigocliente">Codigo</label>
                <input type="text" class="form-control" id="codigocliente" name="codigocliente" placeholder="Codigo" readonly="readonly" value="<%=task_cliente.codigocliente%>">
              </div>
              <div class="form-group col-md-4">
                <label for="dpicliente">DPI</label>
                <input type="number" class="form-control" id="dpicliente" name="dpicliente" placeholder="DPI" value="<%=task_cliente.dpicliente%>" required>
              </div>
              <div class="form-group col-md-4">
                <label for="nitcliente">NIT</label>
                <input type="number" class="form-control" id="nitcliente" name="nitcliente" placeholder="NIT" value="<%=task_cliente.nitcliente%>">
              </div>
            </div>
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="nombrecliente">Nombre</label>
                <input type="text" class="form-control" id="nombrecliente" name="nombrecliente" placeholder="Nombre" value="<%=task_cliente.nombrecliente%>" required>
              </div>
              <div class="form-group col-md-6">
                <label for="apellidocliente">Apellido</label>
                <input type="text" class="form-control" id="apellidocliente" name="apellidocliente" placeholder="Apellido" value="<%=task_cliente.apellidocliente%>" required>
              </div>
            </div>
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="direccioncliente">Dirección</label>
                <input type="text" class="form-control" id="direccioncliente" name="direccioncliente" placeholder="Dirección" value="<%=task_cliente.direccioncliente%>" required>
              </div>
              <div class="form-group col-md-6">
                <label for="limitesaldocliente">Limite Saldo</label>
                <input type="number" class="form-control" id="limitesaldocliente" name="limitesaldocliente" placeholder="Limite Saldo" step="0.01" value="<%=task_cliente.limitesaldocliente%>" required>
              </div>

            </div>

            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="correocliente">Correo Electronico</label>
                <input type="email" class="form-control" id="correocliente" name="correocliente" placeholder="Email" value="<%=task_cliente.correocliente%>" required>
              </div>
              <div class="form-group col-md-4">
                <label for="telefonocliente">Teléfono</label>
                <input type="tel" class="form-control" id="telefonocliente" name="telefonocliente" placeholder="Telefono" value="<%=task_cliente.telefonocliente%>" required>
              </div>
              <div class="form-group col-md-2">
                <label for="estadocliente">Estado</label>
                <select id="estadocliente" name="estadocliente" class="form-control"  required>
                  <option value="true">Activo</option>
                  <option value="false">Inactivo</option>
                </select>
              </div>

            </div>

            <button type="submit" class="btn btn-primary">Actualizar</button>
           </form>

        </div>


      </div>

  </div>

<script>
  document.getElementById("estadocliente").value = "<%=task_cliente.estadocliente%>";
</script>

<%- include("templates/footer") %>
